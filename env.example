DATABASE_URL="file:./prisma/dev.db"

# LLM Configuration - OpenAI (primary)
OPENAI_API_KEY="sk-..."
OPENAI_MODEL="gpt-4o-mini"

# LLM Configuration - Fallback options (optional)
# Option 1: Ollama (for Llama 3, etc.) - Run locally: ollama serve
OLLAMA_API_URL="http://localhost:11434"
OLLAMA_MODEL="llama3"

# Option 2: Anthropic Claude (if you have API key)
# ANTHROPIC_API_KEY="sk-ant-..."
# ANTHROPIC_MODEL="claude-3-haiku-20240307"

# Google Business Profile API - Option A: Direct Access Token (expires in ~1 hour)
GOOGLE_ACCESS_TOKEN="ya29..."

# Google Business Profile API - Option B: Refresh Token Flow (recommended for production)
# Get these from Google Cloud Console OAuth 2.0 credentials
GOOGLE_CLIENT_ID="166415910980-xxx.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="GOCSPX-xxx"
GOOGLE_REFRESH_TOKEN="1//xxx"  # Get this by running: npm run get-refresh-token
GOOGLE_REDIRECT_URI="http://localhost:3000/api/auth/google/callback"

# App Login (Google-only) - OIDC redirect (Authorized redirect URI in Google Cloud Console)
GOOGLE_LOGIN_REDIRECT_URI="http://localhost:3000/api/auth/login/google/callback"

# Session signing secret for app login (set a long random string in production)
SESSION_SECRET="change-me-in-production"

# Token encryption (required for multi-tenant GBP refresh tokens stored in DB)
# 32 bytes base64. Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
ENCRYPTION_KEY=""

# Public base URL used in magic-link emails (optional; falls back to request host)
APP_BASE_URL="http://localhost:3000"

# Optional: SERP rankings (requires SerpAPI) for keyword research output
# This is used to show estimated:
# - GBP (Maps/local pack) rank
# - Website (organic) rank
SERPAPI_KEY=""

# Google Places API (for competitive insights)
GOOGLE_PLACES_API_KEY=""

# Optional overrides for ranking matching
RANKING_BUSINESS_NAME="Malama Dental"
RANKING_WEBSITE_DOMAIN="malama.dental"

# Email / Scheduler
# SMTP example for Gmail (recommended: App Password)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER="malamadentalgroup@gmail.com"
SMTP_PASS="YOUR_APP_PASSWORD"
EMAIL_FROM="malamadentalgroup@gmail.com"
EMAIL_TO="malamadentalgroup@gmail.com"

# Scheduler timezone and cron expressions
SCHEDULER_TZ="America/New_York"
# Daily at 7:00pm ET
DAILY_REVIEWS_CRON="0 19 * * *"
# Twice weekly (Tue/Fri 10:00am ET) - adjust if you want
TWICE_WEEKLY_POST_CRON="0 10 * * 2,5"
# Monthly (1st day 9:00am ET)
MONTHLY_REPORT_CRON="0 9 1 * *"

GOOGLE_LOCATION_ID="locations/1234567890"  # Optional: Will auto-discover if not set
# GOOGLE_ACCOUNT_ID="accounts/123456"  # Optional: Not required, only used during auto-discovery
WEBSITE_URL="https://malama.dental"

# Business Configuration (used in posts and replies)
BUSINESS_NAME="Malama Dental"
BUSINESS_LOCATION="Long Valley, NJ"
BUSINESS_PHONE="908-876-5559"
BUSINESS_EMAIL=""
PORT=3000
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=60

